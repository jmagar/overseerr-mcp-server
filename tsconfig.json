{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "**/node_modules", "**/dist"]
} 